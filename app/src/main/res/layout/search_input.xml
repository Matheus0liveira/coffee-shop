<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        app:hintEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.CoffeeShop.Input.Layout">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:drawableStart="@drawable/search"
            android:drawableEnd="@drawable/furnitur_container"
            android:drawablePadding="12dp"
            android:fontFamily="@font/sora"
            android:foregroundTintMode="@color/gray"
            android:paddingStart="16dp"
            android:paddingEnd="4dp"
            android:paddingVertical="4dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray_black"
            android:textColorHint="@color/gray"
            android:hint="@string/search_coffee" />
    </com.google.android.material.textfield.TextInputLayout>

</merge>