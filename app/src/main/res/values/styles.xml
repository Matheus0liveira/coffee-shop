<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CoffeeShop.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:padding">16dp</item>

        <item name="backgroundTint">@color/brown</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/sora_medium</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.CoffeeShop.Input.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        <item name="colorControlNormal">#400060AB</item>-->
        <!--        <item name="colorControlActivated">#0060AB</item>-->
